rule NetworkAdminUser {
    description: "Grant business network administrators full access to user resources"
    participant: "org.hyperledger.composer.system.NetworkAdmin"
    operation: ALL
    resource: "**"
    action: ALLOW
}

rule NetworkAdminSystem {
    description: "Grant business network administrators full access to system resources"
    participant: "org.hyperledger.composer.system.NetworkAdmin"
    operation: ALL
    resource: "org.hyperledger.composer.system.**"
    action: ALLOW
}

rule OwnRecordFullAccess{
    description:"Only allow freshcred"
	  participant(p):"org.example.empty.User"
 	  operation: ALL 
    resource(r):"org.example.empty.Key"
  	condition:(r.owner !== p.getIdentifier())
  	action: DENY
}

rule TempVerifier1 {
    description: "verifier"
    participant: "org.example.empty.EndUser"
    operation: ALL
    resource: "**"
    action: ALLOW
}
rule TempVerifier2 {
    description: "verifier"
    participant: "org.example.empty.ServiceProvider"
    operation: ALL
    resource: "**"
    action: ALLOW
}
rule TempVerifier3 {
    description: "verifier"
    participant: "org.example.empty.Verifier"
    operation: ALL
    resource: "**"
    action: ALLOW
}



